<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#74A7A7AE">

    <ImageView
        android:id="@+id/ivEventImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:contentDescription="Poster Associated with event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="4"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_width="220dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@+id/ivEventImage"
        android:layout_toEndOf="@+id/tvDay"
        android:text="Event Title"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventTitle"
        android:layout_alignStart="@+id/tvEventTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/ivEventImage"
        android:maxLines="2"
        android:text="Event Summary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvMonth"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDay"
        android:layout_alignStart="@+id/tvDay"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-19dp"
        android:layout_toStartOf="@+id/tvEventTitle"
        android:text="APR"
        android:textSize="14sp" />
</RelativeLayout>